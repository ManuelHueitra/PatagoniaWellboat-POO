<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" 
      style="-fx-background-color: radial-gradient(focus-angle 0.0deg, focus-distance 0.0% , center 50.0% 50.0%, radius 100.0%, #00d2a0 0.0%, #003300 100.0%);" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="patagonia.controller.MenuController">

   <children>
      <Label alignment="CENTER" layoutX="30.0" layoutY="30.0" prefHeight="40.0" prefWidth="90.0" 
             style="-fx-background-color: #00d2a0; -fx-border-color: black; -fx-border-width: 2px; -fx-background-radius: 0; -fx-font-weight: bold;" 
             text="PW">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>

      <Button fx:id="btnCliente" layoutX="195.0" layoutY="130.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="210.0" 
              style="-fx-background-color: #00d2a0; -fx-background-radius: 30; -fx-border-color: black; -fx-border-radius: 30; -fx-border-width: 2px; -fx-cursor: hand;" 
              text="Cliente">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>

      <Button fx:id="btnColaboradores" layoutX="195.0" layoutY="200.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="210.0" 
              style="-fx-background-color: #00d2a0; -fx-background-radius: 30; -fx-border-color: black; -fx-border-radius: 30; -fx-border-width: 2px; -fx-cursor: hand;" 
              text="Colaboradores">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>

      <Button fx:id="btnSalir" layoutX="250.0" layoutY="300.0" mnemonicParsing="false" onAction="#salirDelPrograma" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-underline: true;" text="Salir">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      
   </children>
</Pane>